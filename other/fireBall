fireballPos=x

if fireX > x then
	fireDir=1
elseif fireX < x then
	fireDir=0
end

while true do
	sleep(0)
	paintutils.drawImage(paintutils.loadImage("fireballImg"),fireballPos,18)
	
if fireDir==1 then
	if fireballPos==51 then
		break
	else
		fireballPos=fireballPos+1
	end
end

if fireDir==0 then
	if fireballPos==1 then
		break
	else
		fireballPos=fireballPos-1
	end
end

end
