if event[2]==203 then
	fireballPos=x-2
elseif event[2]==205 then
	fireballPos=x+2
end

while true do
	sleep(0)
	paintutils.drawImage(paintutils.loadImage("fireballImg"),fireballPos,18)
	
if event[2]==205 then
	if fireballPos>52 then
		break
	else
		fireballPos=fireballPos+1
	end
end

if event[2]==203 then
	if fireballPos<-1 then
		break
	else
		fireballPos=fireballPos-1
	end
end

end
