shell.run("clear")
--Variables
x=0
y=17
jumpPossible=true
canFire=true
fireballPos = x

--Motion
while true do
	paintutils.drawImage(paintutils.loadImage("charSprite"),x,y)
	event = {os.pullEvent()}

	if event[2] == 'a' then
		if x == 0 then
		else
			x=x-1
		end
	end

	if event[2] == 'd' then
		if x == 50 then
		else
			x=x+1
		end
	end

	if event[2] == 'w' then
		if jumpPossible == true then
			jumpPossible = false
			y=y-1
			jump = os.startTimer(.5)
		end
	end
	if event[2] == jump then
			y=y+1
			jumpPossible=true
	end

--Attack
	if canFire == true then
		if event[2]==1 then
			shell.run("fireBall")
		end
	end


end
